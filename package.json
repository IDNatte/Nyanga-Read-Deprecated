{
  "name": "read-nyanga",
  "packageManager": "yarn@3.3.1",
  "version": "1.0.0",
  "main": "main.js",
  "author": {
    "email": "idnatte@gmail.com",
    "name": "IDNatte",
    "url": "https://github.com/IDNatt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IDNatte/mang-redr.git"
  },
  "description": "Nyanga Reader ðŸ˜¸",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "electron": "^23.2.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.36.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "prettierrc": "^0.0.0-5",
    "typescript": "^5.0.2"
  },
  "scripts": {
    "electron:watch": "tsc -w",
    "electron:dev": "APP_DEV=true nodemon --exec electron ./electron/main.js",
    "electron:uitestbuild": "cd ./layout/ && yarn run build && cd .. && tsc && electron ./electron/main.js",
    "electron:nouibuildtest": "tsc && electron ./electron/main.js",
    "electron:lint": "eslint -c .eslintrc --ext .ts ./src",
    "electron:format": "prettier --write .",
    "electron:publish:win": "electron-builder --win -p always",
    "electron:publish:linux": "electron-builder --linux -p always",
    "app:pack": "electron-builder --dir",
    "app:build": "cd layout && yarn run build && cd .. && electron-builder",
    "app:release:win": "cd layout && yarn run build && cd .. && yarn run electron:publish:win",
    "app:release:linux": "cd layout && yarn run build && cd .. && yarn run electron:publish:linux"
  },
  "dependencies": {
    "electron-serve": "^1.1.0",
    "electron-updater": "^5.3.0",
    "lokijs": "^1.5.12"
  },
  "build": {
    "appId": "com.IDNatte.readnyanga",
    "productName": "Read Nyanga",
    "publish": [
      {
        "provider": "github",
        "repo": "mang-redr",
        "owner": "IDNatte"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon/image/logo.png"
    },
    "linux": {
      "target": "appImage",
      "icon": "build/icon/image/logo.png",
      "category": "Utility"
    },
    "files": [
      "*/**",
      "main.js",
      "!*.yml",
      "!*.lock",
      "!.github",
      "!.gitignore",
      "!gh_token.*",
      "!.prettierrc",
      "!.editorconfig",
      "!.prettierignore",
      "!build/*",
      "!docs/*",
      "!**/dist/*",
      "!**/github/*",
      "!**/layout/{.*,*.json,*.ts,*.cjs,*.js}",
      "!**/layout/.svelte-kit/*",
      "!**/layout/.yarn/*",
      "!**/layout/static/*",
      "!**/layout/src/*",
      "!**/layout/node_modules/*"
    ],
    "nsis": {
      "installerIcon": "build/icon/image/logo-ico.ico"
    }
  }
}